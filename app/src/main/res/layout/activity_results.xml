<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <TextView

                android:id="@+id/subtitleAvgSection"
                android:layout_width="254dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/lbl_Results"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/grafica_results"
                android:contentDescription="@string/todo" />

            <Space
                android:layout_width="50dp"
                android:layout_height="match_parent" />


        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />



        <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="#DEDEDC"
                android:orientation="horizontal">


                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/imageView00"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/burnedcalories"
                android:contentDescription="@string/todo" />


                <Button
                    android:id="@+id/btnBurnedC"
                    android:layout_width="299dp"
                    android:layout_height="105dp"
                    android:layout_weight="0"
                    android:background="#DEDEDC"
                    android:text="@string/lbl_caloriasConsumidas"
                    android:textStyle="bold"
                    android:textSize="18sp"/>


            </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#DEDEDC"
            android:orientation="horizontal">


            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/exercise3"
                android:contentDescription="@string/todo" />


            <Button
                android:id="@+id/btnExerciseC"
                android:layout_width="299dp"
                android:layout_height="105dp"
                android:layout_weight="0"
                android:background="#DEDEDC"
                android:text="@string/calor_as_de_ejercicio"
                android:textStyle="bold"
                android:textSize="18sp"/>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#DEDEDC"
            android:orientation="horizontal">


            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/caloriespng"
                android:contentDescription="@string/todo" />


            <Button
                android:id="@+id/btnAverageC"
                android:layout_width="299dp"
                android:layout_height="105dp"
                android:layout_weight="0"
                android:background="#DEDEDC"
                android:text="@string/promedio_de_calor_as_gastadas"
                android:textStyle="bold"
                android:textSize="18sp"/>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#DEDEDC"
            android:orientation="horizontal">


            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/weightloss"
                android:contentDescription="@string/todo" />


            <Button
                android:id="@+id/btnWeight"
                android:layout_width="299dp"
                android:layout_height="105dp"
                android:layout_weight="0"
                android:background="#DEDEDC"
                android:text="@string/peso_perdido"
                android:textStyle="bold"
                android:textSize="18sp"/>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#DEDEDC"
            android:orientation="horizontal">


            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/imc"
                android:contentDescription="@string/todo" />


            <Button
                android:id="@+id/btnIMC"
                android:layout_width="299dp"
                android:layout_height="105dp"
                android:layout_weight="0"
                android:background="#DEDEDC"
                android:text="@string/c_lculo_de_imc"
                android:textStyle="bold"
                android:textSize="18sp"/>


        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>