<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="#DEDEDC"
                android:orientation="horizontal">


                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/imageView00"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/burnedcalories" />


                <Button
                    android:id="@+id/btnBurnedC"
                    android:layout_width="299dp"
                    android:layout_height="105dp"
                    android:layout_weight="0"
                    android:background="#DEDEDC"
                    android:text="@string/lbl_caloriasConsumidas"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="#DEDEDC"
                android:orientation="horizontal">


                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/imageView01"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/exercise3" />


                <Button
                    android:id="@+id/btnExerciseC"
                    android:layout_width="299dp"
                    android:layout_height="105dp"
                    android:layout_weight="0"
                    android:background="#DEDEDC"
                    android:text="@string/calor_as_de_ejercicio"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="#DEDEDC"
                android:orientation="horizontal">


                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/caloriespng" />


                <Button
                    android:id="@+id/btnAverageC"
                    android:layout_width="299dp"
                    android:layout_height="105dp"
                    android:layout_weight="0"
                    android:background="#DEDEDC"
                    android:text="@string/promedio_de_calor_as_gastadas"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="#DEDEDC"
                android:orientation="horizontal">


                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/imageViewFin"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/weightloss" />


                <Button
                    android:id="@+id/btnWeight"
                    android:layout_width="299dp"
                    android:layout_height="105dp"
                    android:layout_weight="0"
                    android:background="#DEDEDC"
                    android:text="@string/peso_perdido"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="#DEDEDC"
                android:orientation="horizontal">


                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/imageView27"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/imc" />


                <Button
                    android:id="@+id/btnIMC"
                    android:layout_width="299dp"
                    android:layout_height="105dp"
                    android:layout_weight="0"
                    android:background="#DEDEDC"
                    android:text="@string/c_lculo_de_imc"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="#DEDEDC"
                android:orientation="horizontal">


                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/imageView28"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/desempeno" />


                <Button
                    android:id="@+id/btnPerformance"
                    android:layout_width="299dp"
                    android:layout_height="105dp"
                    android:layout_weight="0"
                    android:background="#DEDEDC"
                    android:text="@string/label_Desempeno"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>